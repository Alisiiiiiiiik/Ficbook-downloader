{
  "manifest_version": 2,
  "name": "Ficbook downloader",
  "description": "Скачивалка с Фикбука",
  "version": "1.5",
  "browser_action":
  {
    "default_popup": "popup.html",
    "default_title": "Ficbook downloader"
  },
  "content_scripts": [
  {
    "matches": ["https://ficbook.net/*"],
    "js": ["content.js"]
  }],

  "permissions": ["storage", "tabs", "https://ficbook.net/*"],
  "options_page": "options.html"
}
